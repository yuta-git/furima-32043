
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li class='category-list', id='lists'>カテゴリーから探す</li>
        <ul class="show-lists hidden" id="pull-down">
          <li><%= link_to "レディース", "/categorys/2", class: "category" %></li>
          <li><%= link_to "メンズ", "/categorys/3", class: "category" %></li>
          <li><%= link_to "ベビー・キッズ", "/categorys/4", class: "category" %></li>
          <li><%= link_to "インテリア・住まい・小物", "/categorys/5", class: "category" %></li>
          <li><%= link_to "本・音楽・ゲーム", "/categorys/6", class: "category" %></li>
          <li><%= link_to "おもちゃ・ホビー・グッズ", "/categorys/7", class: "category" %></li>
          <li><%= link_to "家電・スマホ・カメラ", "/categorys/8", class: "category" %></li>
          <li><%= link_to "スポーツ・レジャー", "/categorys/9", class: "category" %></li>
          <li><%= link_to "ハンドメイド", "/categorys/10", class: "category" %></li>
          <li><%= link_to "その他", "/categorys/11", class: "category" %></li>
        </ul>
      <%# <li><%= link_to 'ブランド', "#", class: "brand-list" %></li> 
    </ul>

    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>